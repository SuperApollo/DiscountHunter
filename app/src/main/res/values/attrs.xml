<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义itemview属性-->
    <declare-styleable name="ItemView">
        <attr name="topLine" format="boolean"></attr>
        <attr name="bottomLine" format="boolean"></attr>
        <attr name="leftText" format="string"></attr>
        <attr name="rightText" format="string"></attr>
        <attr name="redPoint" format="boolean"></attr>
        <attr name="leftDrawable" format="reference"></attr>
        <attr name="rightDrawable" format="reference"></attr>
        <!--0普通，1右箭头，2switchbutton-->
        <attr name="showType" format="integer"></attr>
    </declare-styleable>
    <!--自定义进度条的框-->
    <attr name="progress_unreach_color" format="color" />
    <attr name="progress_unreach_height" format="dimension" />
    <attr name="progress_reach_color" format="color" />
    <attr name="progress_reach_height" format="dimension" />
    <attr name="progress_text_color" format="color" />
    <attr name="progress_text_size" format="dimension" />
    <attr name="progress_text_offset" format="dimension" />
    <attr name="radius" format="dimension" />
    <declare-styleable name="HorizontalProgressBar">
        <attr name="progress_unreach_color" />
        <attr name="progress_unreach_height" />
        <attr name="progress_reach_color" />
        <attr name="progress_reach_height" />
    </declare-styleable>

    <!--圆形ProgressDialog消失动画-->
    <style name="dialogWindowAnim" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <!--圆形ProgressDialog样式-->
    <style name="progress_circle_style">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle</item>
        <item name="android:indeterminateDuration">1200</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

</resources>