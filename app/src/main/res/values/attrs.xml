<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义itemview属性-->
    <declare-styleable name="ItemView">
        <attr name="topLine" format="boolean"></attr>
        <attr name="bottomLine" format="boolean"></attr>
        <attr name="leftText" format="string"></attr>
        <attr name="rightText" format="string"></attr>
        <attr name="redPoint" format="boolean"></attr>
        <attr name="leftDrawable" format="reference"></attr>
        <attr name="rightDrawable" format="reference"></attr>
        <!--0普通，1右箭头，2switchbutton-->
        <attr name="showType" format="integer"></attr>
    </declare-styleable>
    <!--自定义进度条的框-->
    <attr name="progress_unreach_color" format="color" />
    <attr name="progress_unreach_height" format="dimension" />
    <attr name="progress_reach_color" format="color" />
    <attr name="progress_reach_height" format="dimension" />
    <attr name="progress_text_color" format="color" />
    <attr name="progress_text_size" format="dimension" />
    <attr name="progress_text_offset" format="dimension" />
    <attr name="radius" format="dimension" />
    <declare-styleable name="HorizontalProgressBar">
        <attr name="progress_unreach_color" />
        <attr name="progress_unreach_height" />
        <attr name="progress_reach_color" />
        <attr name="progress_reach_height" />
    </declare-styleable>

    <!--圆形ProgressDialog去掉左右空白样式-->
    <style name="NoWhiteDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--圆形ProgressDialog消失动画-->
    <style name="dialogWindowAnim" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <!--圆形ProgressDialog样式-->
    <style name="progress_circle_style">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle</item>
        <item name="android:indeterminateDuration">1200</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <!--corner_color 边角颜色，
    scanner_color 扫描线颜色
    possible_result_color 扫描点颜色
    frame_color 扫描框边线颜色
    mask_color 模糊区域颜色
    label_text  框上方提示
 -->
    <declare-styleable name="ViewfinderView">
        <attr name="corner_color" format="color" />
        <attr name="laser_color" format="color" />
        <attr name="frame_color" format="color" />
        <attr name="mask_color" format="color" />
        <attr name="result_point_color" format="color" />
        <attr name="result_color" format="color" />
        <attr name="label_text_color" format="color" />
        <attr name="label_text" format="string" />
        <attr name="label_text_size" format="float" />
    </declare-styleable>
    <!--自定义控件之时钟-->
    <declare-styleable name="ClockView">
        <attr name="discRadius" format="integer" />//表盘半径
        <attr name="discColor" format="color" />//表盘颜色
        <attr name="discPadding" format="integer" />//表盘内部间距
        <attr name="pointRadius" format="integer" />//圆心小点半径
        <attr name="pointColor" format="color" />//小圆点颜色
        <attr name="edgeWidth" format="integer" />//表盘边缘宽度
        <attr name="discLongWidth" format="integer" />//长刻度的宽
        <attr name="discLongLength" format="integer" />//长刻度的长
        <attr name="discLongColor" format="color" />//长刻度的颜色
        <attr name="discShortWidth" format="integer" />//短刻度的宽
        <attr name="discShortLength" format="integer" />//短刻度的长
        <attr name="discShortColor" format="color" />//短刻度的颜色
        <attr name="textFont" format="integer" />//数字大小
        <attr name="textColor" format="color" />//数字颜色
        <attr name="hourWidth" format="integer" />//时针宽
        <attr name="hourLength" format="integer" />//时针长
        <attr name="hourColor" format="color" />//时针颜色
        <attr name="minuteWidth" format="integer" />//分针宽
        <attr name="minuteLength" format="integer" />//分针长
        <attr name="minuteColor" format="color" />//分针颜色
        <attr name="secondWidth" format="integer" />秒针宽
        <attr name="secondLength" format="integer" />//秒针长
        <attr name="secondColor" format="color" />//秒针颜色

    </declare-styleable>
</resources>